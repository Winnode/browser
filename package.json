{
  "name": "lumen-browser",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "electron electron/main.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win nsis",
    "electron": "electron electron/main.cjs"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.36.0",
    "@cosmjs/encoding": "^0.36.0",
    "@lumen-chain/sdk": "^1.3.0",
    "@noble/post-quantum": "^0.5.4",
    "@zxing/library": "^0.21.3",
    "kubo": "^0.37.0",
    "lucide-vue-next": "^0.540.0",
    "qrcode": "^1.5.4",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/qrcode": "^1.5.6",
    "@vitejs/plugin-vue": "^5.0.5",
    "concurrently": "^9.0.0",
    "electron": "^31.3.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.lumen.browser",
    "productName": "Lumen Browser",
    "asar": true,
    "asarUnpack": [
      "node_modules/kubo/kubo/**"
    ],
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/peers.txt",
        "to": "peers.txt"
      },
      {
        "from": "resources/gateways_whitelist.txt",
        "to": "gateways_whitelist.txt"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "src/img/logo.png",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Lumen Browser",
      "runAfterFinish": true
    }
  }
}
